# MakrX Auth Service Environment Configuration
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=production
# Options: development, staging, production

# Keycloak Configuration (REQUIRED)
KEYCLOAK_URL=https://auth.makrx.org
KEYCLOAK_REALM=makrx
KEYCLOAK_CLIENT_ID=auth-service
KEYCLOAK_CLIENT_SECRET=CHANGE_ME_SECURE_SECRET_FOR_KEYCLOAK

# JWT Configuration (REQUIRED)
JWT_SECRET=CHANGE_ME_SECURE_JWT_SECRET_KEY_256_BITS_MIN
# Generate with: openssl rand -base64 32

# Service URLs
MAKRCAVE_API_URL=https://api.makrcave.com
STORE_API_URL=https://api.makrx.store
AUTH_SERVICE_URL=https://auth.makrx.org

# Security Settings
CORS_ORIGINS=https://makrx.org,https://makrcave.com,https://makrx.store
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=3600

# Logging
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Database (if needed)
DATABASE_URL=postgresql://auth_user:CHANGE_ME_DB_PASSWORD@localhost:5432/makrx_auth

# Redis (for session management)
REDIS_URL=redis://localhost:6379/0

# SSL/TLS
SSL_KEYFILE=/path/to/ssl/key.pem
SSL_CERTFILE=/path/to/ssl/cert.pem

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
HEALTH_CHECK_TOKEN=CHANGE_ME_HEALTH_CHECK_SECRET

# Security
ALLOWED_HOSTS=auth.makrx.org,localhost
REQUEST_SIZE_LIMIT=1048576
# Request size limit in bytes (1MB default)

# IMPORTANT SECURITY NOTES:
# 1. Generate strong random secrets: openssl rand -base64 32
# 2. Use different secrets for each environment
# 3. Never commit secrets to version control
# 4. Rotate secrets regularly
# 5. Use environment-specific configurations
# 6. Enable HTTPS in production
# 7. Set up proper SSL certificates
# 8. Configure firewall rules
# 9. Enable audit logging
# 10. Monitor for security events

# MakrX Production Environment Configuration
# Copy this to .env and fill in actual values

# ===========================================
# SECURITY SETTINGS
# ===========================================
SECRET_KEY=your-super-secret-key-here-minimum-32-characters
JWT_SECRET_KEY=another-secret-key-for-jwt-tokens
ENCRYPTION_KEY=32-character-encryption-key-here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Production Database
DATABASE_URL=postgresql://username:password@host:5432/makrx_production
POSTGRES_HOST=your-postgres-host.com
POSTGRES_PORT=5432
POSTGRES_DB=makrx_production
POSTGRES_USER=makrx_user
POSTGRES_PASSWORD=secure-database-password

# Redis for Caching and Sessions
REDIS_URL=redis://username:password@host:6379/0
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=redis-password

# ===========================================
# KEYCLOAK SSO CONFIGURATION
# ===========================================
KEYCLOAK_SERVER_URL=https://auth.makrx.com
KEYCLOAK_REALM=makrx
KEYCLOAK_CLIENT_ID=makrx-store
KEYCLOAK_CLIENT_SECRET=keycloak-client-secret
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin-password

# ===========================================
# PAYMENT GATEWAYS
# ===========================================
# Stripe (International Payments)
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Razorpay (India Payments)
RAZORPAY_KEY_ID=rzp_live_your-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# UPI Configuration
UPI_ID=makrx@paytm

# ===========================================
# FILE STORAGE (AWS S3)
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
S3_BUCKET_NAME=makrx-production-uploads
S3_CDN_URL=https://cdn.makrx.com

# ===========================================
# EMAIL SERVICES
# ===========================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=noreply@makrx.com
SMTP_PASSWORD=your-email-password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@makrx.com
FROM_NAME=MakrX

# AWS SES (Alternative to SMTP)
AWS_SES_REGION=ap-south-1
AWS_SES_FROM_EMAIL=noreply@makrx.com

# ===========================================
# SMS & WHATSAPP
# ===========================================
# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# ===========================================
# PUSH NOTIFICATIONS
# ===========================================
FIREBASE_SERVER_KEY=your-firebase-server-key
APPLE_PUSH_KEY=your-apple-push-key

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Sentry for Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Application Monitoring
NEWRELIC_LICENSE_KEY=your-newrelic-license
DATADOG_API_KEY=your-datadog-api-key

# Log Level
LOG_LEVEL=INFO

# ===========================================
# EXTERNAL API INTEGRATIONS
# ===========================================
# Shipping & Logistics
DELHIVERY_API_KEY=your-delhivery-api-key
BLUEDART_API_KEY=your-bluedart-api-key

# Tax & Compliance
GST_API_KEY=your-gst-portal-api-key
CLEARTAX_API_KEY=your-cleartax-api-key

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# ===========================================
# CDN & ASSET DELIVERY
# ===========================================
CDN_URL=https://cdn.makrx.com
CLOUDFLARE_API_TOKEN=your-cloudflare-token

# ===========================================
# SECURITY & COMPLIANCE
# ===========================================
# SSL/TLS
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# CORS Origins (comma-separated)
CORS_ORIGINS=https://makrx.com,https://app.makrx.com,https://store.makrx.com

# ===========================================
# BUSINESS CONFIGURATION
# ===========================================
# Company Details
COMPANY_NAME=MakrX Technologies Pvt Ltd
COMPANY_GST_NUMBER=your-gst-number
COMPANY_ADDRESS=Your Company Address
COMPANY_PHONE=+91-1234567890
COMPANY_EMAIL=support@makrx.com

# Currency & Pricing
DEFAULT_CURRENCY=INR
TAX_RATE=0.18
PLATFORM_FEE_RATE=0.05

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_PAYMENT_COD=true
ENABLE_PAYMENT_UPI=true
ENABLE_3D_PRINTING_SERVICE=true
ENABLE_MAKRCAVE_INTEGRATION=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_AI_RECOMMENDATIONS=false

# ===========================================
# BACKUP & DISASTER RECOVERY
# ===========================================
BACKUP_S3_BUCKET=makrx-backups
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# ===========================================
# PERFORMANCE & SCALING
# ===========================================
# Cache TTL (seconds)
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=3600
CACHE_TTL_LONG=86400

# Worker Configuration
CELERY_BROKER_URL=redis://username:password@host:6379/1
CELERY_RESULT_BACKEND=redis://username:password@host:6379/2
WORKER_CONCURRENCY=4

# ===========================================
# DEVELOPMENT & DEBUG
# ===========================================
# Set to false in production
DEBUG=false
TESTING=false

# Environment
ENVIRONMENT=production
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://api.makrx.com
NEXT_PUBLIC_APP_URL=https://app.makrx.com
NEXT_PUBLIC_STORE_URL=https://store.makrx.com

# ===========================================
# HEALTH CHECKS & MONITORING
# ===========================================
HEALTH_CHECK_URL=https://api.makrx.com/health
HEALTH_CHECK_INTERVAL=30

# Database Connection Pool
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================
# Social Auth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Map Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Customer Support
INTERCOM_ACCESS_TOKEN=your-intercom-token
ZENDESK_API_TOKEN=your-zendesk-token

# ===========================================
# LEGAL & COMPLIANCE
# ===========================================
PRIVACY_POLICY_URL=https://makrx.com/privacy
TERMS_OF_SERVICE_URL=https://makrx.com/terms
GDPR_CONTACT_EMAIL=privacy@makrx.com

# ===========================================
# DEPLOYMENT & CI/CD
# ===========================================
DEPLOY_KEY=your-deployment-key
WEBHOOK_SECRET=your-github-webhook-secret
DOCKER_REGISTRY=your-docker-registry.com

# ===========================================
# NOTES
# ===========================================
# 1. Replace ALL "your-*" placeholders with actual values
# 2. Use strong, unique passwords (minimum 16 characters)
# 3. Enable 2FA on all external services
# 4. Regularly rotate secrets and API keys
# 5. Use environment-specific values for staging/production
# 6. Never commit this file to version control
# 7. Use a secrets management service in production
# 8. Validate all configurations before deployment

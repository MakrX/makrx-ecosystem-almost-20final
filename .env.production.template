# ==============================================
# MakrCave Production Environment Configuration
# ==============================================
# Copy this file to .env.production and update all values

# ==============================================
# Database Configuration
# ==============================================
POSTGRES_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://makrcave_user:your_secure_database_password_here@postgres:5432/makrcave_db

# ==============================================
# Security & Authentication
# ==============================================
JWT_SECRET_KEY=your_super_secure_jwt_key_minimum_256_characters_long_random_string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# ==============================================
# CORS & API Settings
# ==============================================
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com,https://app.yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# ==============================================
# File Upload & Storage
# ==============================================
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=/app/uploads

# ==============================================
# Logging Configuration
# ==============================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/makrcave.log

# ==============================================
# Redis Configuration
# ==============================================
REDIS_PASSWORD=your_secure_redis_password
REDIS_URL=redis://:your_secure_redis_password@redis:6379/0

# ==============================================
# Email Configuration (Production SMTP)
# ==============================================
SMTP_SERVER=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USERNAME=your-production-email@yourdomain.com
SMTP_PASSWORD=your_email_app_password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=MakrCave

# ==============================================
# Frontend Configuration
# ==============================================
FRONTEND_URL=https://yourdomain.com

# ==============================================
# Member Management Settings
# ==============================================
DEFAULT_MAKERSPACE_ID=default_makerspace
INVITE_EXPIRY_DAYS=7
MEMBERSHIP_REMINDER_DAYS=30

# ==============================================
# Payment Gateway Settings - Razorpay
# ==============================================
RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxx
RAZORPAY_KEY_SECRET=your_live_razorpay_secret_key
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# ==============================================
# Payment Gateway Settings - Stripe
# ==============================================
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxx

# ==============================================
# Invoice & Billing Configuration
# ==============================================
INVOICE_STORAGE_DIR=/app/invoices
INVOICE_LOGO_PATH=/app/static/logo.png
COMPANY_NAME=Your Company Name
COMPANY_ADDRESS=Your Company Address\nCity, State ZIP
COMPANY_PHONE=+1 (555) 123-4567
COMPANY_EMAIL=billing@yourdomain.com
COMPANY_WEBSITE=yourdomain.com
COMPANY_TAX_ID=YOUR_TAX_ID_NUMBER

# ==============================================
# Analytics & Reporting
# ==============================================
ANALYTICS_CACHE_TTL=300
ANALYTICS_USE_MOCK_DATA=False
ANALYTICS_REPORT_STORAGE_DIR=/app/reports
ANALYTICS_MAX_REPORT_AGE_DAYS=30
ANALYTICS_BATCH_SIZE=1000

# ==============================================
# Background Tasks (Celery)
# ==============================================
CELERY_BROKER_URL=redis://:your_secure_redis_password@redis:6379/1
CELERY_RESULT_BACKEND=redis://:your_secure_redis_password@redis:6379/1
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# ==============================================
# Skill Management System
# ==============================================
SKILL_CERTIFICATION_EXPIRY_DAYS=365
SKILL_REQUEST_AUTO_APPROVE=false
SKILL_AUDIT_RETENTION_DAYS=1825
EQUIPMENT_SKILL_ENFORCEMENT=true
EQUIPMENT_EMERGENCY_OVERRIDE=false

# ==============================================
# Production Settings
# ==============================================
DEBUG=False
ENVIRONMENT=production

# ==============================================
# MakrX Store Integration (if using)
# ==============================================
MAKRX_STORE_API_URL=https://api.makrx.com/v1
MAKRX_STORE_API_KEY=your_makrx_store_api_key

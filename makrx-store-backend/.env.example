# Application settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=postgresql+asyncpg://makrx:makrx@localhost:5432/makrx_store
DB_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# Authentication (Keycloak)
KEYCLOAK_ISSUER=https://auth.makrx.org/realms/makrx
KEYCLOAK_AUDIENCE=makrx-store

# S3/MinIO Storage
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=makrx-uploads
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio123
S3_REGION=us-east-1
S3_USE_SSL=false

# Payments
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLIC_KEY=pk_test_...

RAZORPAY_KEY_ID=rzp_test_...
RAZORPAY_KEY_SECRET=...
RAZORPAY_WEBHOOK_SECRET=...

# MakrCave Integration
SERVICE_MAKRCAVE_URL=http://localhost:8001
SERVICE_TOKEN=your-service-token

# Pricing Configuration
PRICE_SETUP_FEE=50.0
RATE_PLA_PER_CM3=0.15
RATE_ABS_PER_CM3=0.18
RATE_PETG_PER_CM3=0.20
RATE_RESIN_PER_CM3=0.35

# File Upload Limits
MAX_UPLOAD_SIZE=104857600
ALLOWED_UPLOAD_EXTENSIONS=.stl,.obj,.3mf,.step,.stp

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Celery
CELERY_BROKER=redis://localhost:6379/1
CELERY_BACKEND=redis://localhost:6379/1

# Logging
LOG_LEVEL=INFO

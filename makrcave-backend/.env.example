# Database Configuration
DATABASE_URL=sqlite:///./makrcave.db
# For PostgreSQL: postgresql://username:password@localhost/makrcave_db
# For MySQL: mysql://username:password@localhost/makrcave_db

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# MakrX Store Integration
MAKRX_STORE_API_URL=https://api.makrx.com/v1
MAKRX_STORE_API_KEY=your-makrx-store-api-key

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# File Upload Settings
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/makrcave.log

# Redis (for caching and background tasks)
REDIS_URL=redis://localhost:6379/0

# Email Settings (for notifications and member invites)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@makrcave.com
FROM_NAME=MakrCave

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Member Management Settings
DEFAULT_MAKERSPACE_ID=default_makerspace
INVITE_EXPIRY_DAYS=7
MEMBERSHIP_REMINDER_DAYS=30

# Payment Gateway Settings
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

STRIPE_SECRET_KEY=sk_test_xxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxx

# Invoice Settings
INVOICE_STORAGE_DIR=./invoices
INVOICE_LOGO_PATH=./static/logo.png
COMPANY_NAME=MakrCave
COMPANY_ADDRESS=123 Maker Street\nTech City, TC 12345
COMPANY_PHONE=+91 12345 67890
COMPANY_EMAIL=billing@makrcave.com
COMPANY_WEBSITE=www.makrcave.com
COMPANY_TAX_ID=GST123456789

# Analytics Settings
ANALYTICS_CACHE_TTL=300  # Cache TTL in seconds (5 minutes)
ANALYTICS_USE_MOCK_DATA=False  # Use mock data when no real data available
ANALYTICS_REPORT_STORAGE_DIR=./reports  # Directory for generated reports
ANALYTICS_MAX_REPORT_AGE_DAYS=30  # Auto-delete reports older than this
ANALYTICS_BATCH_SIZE=1000  # Batch size for data processing

# Background Tasks Settings
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# Development Settings
DEBUG=True
ENVIRONMENT=development
